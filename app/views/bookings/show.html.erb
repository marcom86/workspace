<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= cl_image_tag @booking.space.photo, width: '100%' %></div>
    <div class="col">
      <h1>Booking #<%= @booking.id %> <small><span class="badge badge-primary"><%= @booking.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @booking.created_at.to_date %></li>
        <li><strong>SPACE</strong> <%= @booking.space.address %> </li>
        <li><strong>FROM</strong> <%= @booking.check_in %> <strong>TO</strong> <%= @booking.check_out %> </li>
        <li><strong>DAY(S)</strong> <%= 1 + (@booking.check_out - @booking.check_in).to_i %> </li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @booking.amount %></li>
        </li>
      </ul>
    </div>
  </div>
</div>


<div class="container">
  <div class="card mb-3">
    <div class="row no-gutters">
      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <img src="<%= @booking.space.photo %>" class="card-img" alt="...">
      </div>
      <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
        <div class="card-body">

          <p class="card-text">Check-in: <strong><%= @booking.check_in %></strong>  Check-out: <strong><%= @booking.check_out %></strong></p>
          <h5 class="card-title"><%= @booking.space.address %></h5>
          <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
        </div>
      </div>
    </div>
  </div>
</div>
