<%= render 'shared/searchbar' %>

<div class="banner">
  <div class="search-form">
    <h1>Book workspaces on-demand.</h1>


    <form class=" p-l-20 p-r-20">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputCheckIn">Check-in</label>
          <input type="date" class="form-control" id="inputCheckIn">
        </div>
        <div class="form-group col-md-6">
          <label for="inputCheckOut">Check-out</label>
          <input type="date" class="form-control" id="inputCheckOut">
        </div>
      </div>

      <div class="form-group">
        <label for="inputPeople">People</label>
        <input type="number" class="form-control" id="inputPeople" placeholder="1, 2, 3...">
      </div>


      <button type="submit" class="btn btn-primary btn-lg btn-block m-t-50 m-b-25">Search</button>
    </form>


  </div>
</div>
