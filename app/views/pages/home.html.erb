<div class="banner">

  <div class="row">

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

      <div class="search-form p-l-25 p-r-25 p-b-25">
        <h1>Workspaces on-demand.</h1>

        <%= form_tag spaces_path, method: :get do %>
        <%= label_tag :query1, "Check in" %>
        <%= date_field_tag :query1,
        params[:query1],
        class: "form-control" %>
        <%= label_tag :query2, "Check out", class: "m-t-25" %>
        <%= date_field_tag :query2,
        params[:query2],
        class: "form-control" %>
        <%= submit_tag "Search", class: "btn btn-primary btn-lg btn-block m-t-25" %>
        <% end %>

      </div>

    </div>

  </div>

</div>

<div class="">
  <div class="row">
    <div class="col-md-4">
      <%= show_svg('dates.svg') %>
      <h6>Choose the dates</h6>
    </div>
    <div class="col-md-4">Ipsum</div>
    <div class="col-md-4">Dolor</div>
  </div>
</div>
